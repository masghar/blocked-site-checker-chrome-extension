{
    "manifest_version": 3,
    "name": "Site Block Checker",
    "version": "1.0",
    "description": "Check if major websites are accessible or blocked.",
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["*://*/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  